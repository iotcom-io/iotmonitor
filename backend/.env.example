# Server Configuration
PORT=5001
NODE_ENV=production
FRONTEND_ORIGIN=http://localhost:3000
APP_TIMEZONE=Asia/Kolkata

# MongoDB
# External Mongo default (host machine / managed cluster)
MONGODB_URI=mongodb://host.docker.internal:27017/iotmonitor
# If using local-db profile in docker compose, switch to:
# MONGODB_URI=mongodb://mongodb:27017/iotmonitor

# Redis
REDIS_URL=redis://redis:6379

# MQTT Broker
MQTT_URL=mqtt://monitoring.iotcom.io:1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
# If using local-mqtt profile in docker compose, switch to:
# MQTT_URL=mqtt://mosquitto:1883

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_me

# SMTP (Notifications)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=

# Slack
SLACK_WEBHOOK_URL=
